# ===========================================
# PUBLIC VARIABLES (available on client-side)
# ===========================================

# App Configuration
NEXT_PUBLIC_API_BASE_URL=http://localhost:3000/api
NEXT_PUBLIC_APP_NAME=Booking System Owner
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_ENVIRONMENT=development

# ===========================================
# SERVER-ONLY VARIABLES (not available on client-side)
# ===========================================

# Database
DATABASE_URL=postgresql://username:password@localhost:5432/booking_system

# Authentication
AUTH_COOKIE_NAME=booking-system-auth
AUTH_SECRET=your-super-secret-key-at-least-32-characters-long
AUTH_URL=http://localhost:3000

# External Services (Optional)
STRIPE_PUBLIC_KEY=pk_test_...
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Email (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Redis (Optional - for caching)
REDIS_URL=redis://localhost:6379

# File Storage (Optional)
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760

# Rate Limiting (Optional)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
