{
  "extends": "../../packages/config/tsconfig/nextapp.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@app-shell/*": [
        "src/app-shell/*"
      ],
      "@shared/*": [
        "src/shared/*"
      ],
      "@entities/*": [
        "src/entities/*"
      ],
      "@features/*": [
        "src/features/*"
      ],
      "@widgets/*": [
        "src/widgets/*"
      ],
      "@theme/*": [
        "../../packages/theme/src/*"
      ],
      "@config/*": [
        "../../packages/config/*"
      ],
      "@ui": [
        "../../packages/ui/src"
      ],
      "@ui/*": [
        "../../packages/ui/src/*"
      ],
      "@/*": [
        "src/*"
      ]
    },
    "jsx": "react-jsx"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
